{
    "name": "Spotify Lyrics Scraper",
    "description": "Get lyrics of current playing Spotify song",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html"
    },
    
    "content_scripts": [{
        "matches": ["https://open.spotify.com/*"],
        "js": ["contentscript.js"]
    }],
    "permissions": [
        "storage",
        "tabs",
        "alarms"
    ]

}